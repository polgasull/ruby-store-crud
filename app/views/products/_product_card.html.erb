<div class="card" style="width: 18rem;">
  <img class="card-img-top" src="<%=product.image%>" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title"> <%= product.name %> </h5>
    <p class="card-text"> <%= product.description %> </p>
    <p class="card-text"> <%= product.price %> </p>
    <%= link_to t('show'), product_show_path(product), class: "btn btn-info" %>
    <%= link_to t('edit'), product_edit_path(product), class: "btn btn-primary" %>
    <%= link_to t('delete'), product_delete_path(product), class: "btn btn-danger", method: :delete, data: {confirm: t('are_you_sure')} %>
  </div>
</div>
