<div class="row">
  <div class="col">
    <div id="productSlider" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100 slide-image" src="<%= @product.image %>" alt="First slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100 slide-image" src="<%= @product.image_second %>" alt="Second slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100 slide-image" src="<%= @product.image_third %>" alt="Third slide">
        </div>
      </div>
    </div>
    <h3> <%= @product.name %> </h3>
    <p> <%= @product.description %> </p>
    <%= link_to t('product_list'), products_path, class: "btn btn-info" %>
  </div>
</div>
