<%= form_for @product, url: {action: "update"} do |f| %>

<div class="form-group">
  <%= f.label :image %>
  <%= f.text_field :image, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :description %>
  <%= f.text_area :description, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :price %>
  <%= f.number_field :price, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :image_second %>
  <%= f.text_field :image_second, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :image_third %>
  <%= f.text_field :image_third, class: "form-control" %>
</div>

<div>
  <%= f.submit t('save'), :class => "btn btn-primary" %>
</div>

<% end %>
