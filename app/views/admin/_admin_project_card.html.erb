<div class="card project-card h-100">
  <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <% project.pictures.each_with_index do |img, index| %>
        <div class="carousel-item <%= 'active' if index == 0 %>">
          <img class="card-img-top d-block" src="<%= img.image.url %>" alt="Card image cap">
        </div>
      <% end %>
    </div>
  </div>

  <div class="card-body">
    <h5 class="card-title"> <%= project.name %> </h5>
    <p class="card-text"> <%= project.location %> </p>
    <p class="card-text"> <%= project.surface %> </p>
    <%= link_to t('show'), admin_show_project_path(project), class: "btn btn-info" %>
    <%= link_to t('edit'), admin_edit_project_path(project), class: "btn btn-primary" %>
    <%= link_to t('delete'), admin_delete_project_path(project), class: "btn btn-danger", method: :delete, data: {confirm: t('are_you_sure')} %>
  </div>
</div>
