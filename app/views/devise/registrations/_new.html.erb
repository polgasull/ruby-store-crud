<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email, t('email') %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg", placeholder: t('email') %>
  </div>

  <div class="form-group">
    <%= f.label :password, t('password') %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control form-control-lg", placeholder: t('password') %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, t('confirm_password') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control form-control-lg", placeholder: t('confirm_password') %>
  </div>

  <div class="actions">
    <%= f.submit t('sign_up'), class: "btn btn-outline-light btn-block" %>
  </div>
<% end %>
